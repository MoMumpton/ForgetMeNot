<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/rememberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Remebering for those who cannot"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="33dp"
        android:textStyle="italic"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@id/generateCodeScanBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rememberText"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fmn" />

    <Button
        android:id="@+id/generateCodeScanBtn"
        android:layout_width="227dp"
        android:layout_height="42dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:text="Generate qr code"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/ShopBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ShopBtn"
        android:layout_width="227dp"
        android:layout_height="42dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:text="Upload and Shop"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/scannerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateCodeScanBtn"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/scannerButton"
        android:layout_width="144dp"
        android:layout_height="147dp"
        android:layout_marginTop="25dp"
        android:background="?attr/actionModeSelectAllDrawable"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateCodeScanBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>