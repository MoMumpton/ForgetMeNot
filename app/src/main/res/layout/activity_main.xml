<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/rememberText"
        android:layout_width="377dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/remembering_for_those_who_cannot"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45dp"
        android:textStyle="bold"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@id/fmnBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/fmnBtn"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:background="@drawable/fmnwebbtn"
        app:layout_constraintBottom_toTopOf="@id/generateCodeScanBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rememberText"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fmnwebbtn" />

    <Button
        android:id="@+id/generateCodeScanBtn"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/fmngenerate"
        app:layout_constraintBottom_toTopOf="@id/ShopBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmnBtn"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/ShopBtn"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/fmnuas"
        app:layout_constraintBottom_toTopOf="@id/scannerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateCodeScanBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/scannerButton"
        android:layout_width="368dp"
        android:layout_height="72dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/scanqr"
        app:layout_constraintBottom_toTopOf="@id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShopBtn"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/info"
        android:layout_width="337dp"
        android:layout_height="97dp"
        android:layout_marginBottom="16dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/info"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scannerButton" />


</androidx.constraintlayout.widget.ConstraintLayout>